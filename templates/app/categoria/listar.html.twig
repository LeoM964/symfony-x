<div class="w-50 mt-2">
    {% include "mensagens.html.twig" %}
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
            </tr>
        </thead>
        <tbody>
            {% for categoria in categorias %}
            <tr>
                <th scope="row">{{ categoria.id }}</th>
                <td>{{ categoria.nome }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>